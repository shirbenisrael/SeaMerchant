<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_hour_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="6 בבוקר"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/current_day_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="יום ראשון "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/current_state_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="ישראל"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/current_weather_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="תנאי השייט היום טובים"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/MARKET_STATE"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="הפלגה/שוק"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/goods_buttons"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:onClick="onMarketClick"
                    android:scaleType="fitXY"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:text="חיטה" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:onClick="onMarketClick"
                    android:scaleType="fitXY"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:text="זיתים" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:onClick="onMarketClick"
                    android:scaleType="fitXY"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:text="נחושת" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prices_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wide_fix_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/wide_ship_button"
                android:gravity="right|center"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="ספינה תקינה" />

            <TextView
                android:id="@+id/wide_capacity_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/wide_capacity_button"
                android:gravity="left|center"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="קיבולת 100" />

            <Button
                android:id="@+id/wide_sleep_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/wide_sleep_button"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="onSleepClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wide_cash_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wide_cash_button"
                android:gravity="left"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="5000" />

            <TextView
                android:id="@+id/wide_bank_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wide_bank_button"
                android:gravity="left"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="1000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="עזור לי"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="מחשבון"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
