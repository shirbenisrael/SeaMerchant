<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_hour_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/current_day_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/current_state_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layoutDirection="ltr"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:id="@+id/current_weather_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/market_state_text_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/MARKET_STATE"
                android:textColor="#000000" />

            </LinearLayout>

            <Button
                android:id="@+id/fortune_teller_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:elevation="1dp"
                android:onClick="onFortuneTellerClick"
                android:background="@drawable/crystal_ball"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sail_help"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/sail_help"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/market_help"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/market_help"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/goods_buttons"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:onClick="onMarketClick"
                    android:scaleType="fitXY"
                    android:paddingLeft="5dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:onClick="onMarketClick"
                    android:scaleType="fitXY"
                    android:paddingLeft="5dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:onClick="onMarketClick"
                    android:scaleType="fitXY"
                    android:paddingLeft="5dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prices_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:orientation="horizontal">

                <include layout="@layout/flag_button_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />
                <include layout="@layout/one_price_layout" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wide_capacity_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/wide_capacity_button"
                android:gravity="left|center"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:onClick="onCapacityButtonClick"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <Button
                android:id="@+id/wide_fix_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/wide_ship_button"
                android:gravity="right|center"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="onFixButtonClick"
                android:paddingRight="5dp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <Button
                android:id="@+id/wide_sleep_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/wide_sleep_button"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="onSleepClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tutorial_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:background="@drawable/empty_button"
                android:text="@string/TUTORIAL"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="onTutorialClick"
                android:textColor="#000000" />

            <Button
                android:id="@+id/wide_cash_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/wide_cash_button"
                android:gravity="left|center_vertical"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="onBankClick"
                android:paddingLeft="5dp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <Button
                android:id="@+id/wide_bank_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/wide_bank_button"
                android:gravity="left|center_vertical"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="onBankClick"
                android:paddingLeft="5dp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/empty_button"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="onMenuClick"
                android:text="@string/MENU"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/calculator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/CALCULATOR"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
